GerenciadorTelas:
    LoginTela:
    TelaPrincipal:

<Button>
    font_size: 32
    pos_hint: {'center_x': .5}
    size_hint: (.4, .5)

<Label>
    font_size: 34

<TextInput>
    pos_hint: {'center_x': .5}
    size_hint: (.8, .5)
    font_size: 32

<LoginTela>:
    name: "login"
    usuario: usuario
    senha: senha
    labelMensagem: labelMensagem

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            text: "Usuario"
            
        TextInput:
            id: usuario
            multiline: False

        Label:
            text: "Senha"
            
        TextInput:
            id: senha
            multiline: False

        Label:
            id: labelMensagem
            text:''
        BoxLayout:
            orientation:'horizontal'

            Button:
                text:'Esqueci a senha'
            
            Button:
                text: 'Login'
                on_release: root.validarLogin()

<TelaPrincipal>:
    name: 'principal'

    Label:
        text:'TELA PRINCIPAL'