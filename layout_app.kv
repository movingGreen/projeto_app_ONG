GerenciadorTelas:
    LoginTela:
    TelaPrincipal:

<Button>
    font_size: 32
    pos_hint: {'center_x': .5}
    size_hint: (.4, .5)

<Label>
    font_size: 34

<TextInput>
    pos_hint: {'center_x': .5}
    size_hint: (.8, .8)
    font_size: 32

<LoginTela>:
    name: "login"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        spacing: 10
        padding: 10


        Label:
            text: "Usuario"
            
        TextInput:
            multiline: False

        Label:
            text: "Senha"
            
        TextInput:
            multiline: False

        Button:
            text: 'Login'
            on_release: root.validarLogin()
                    

