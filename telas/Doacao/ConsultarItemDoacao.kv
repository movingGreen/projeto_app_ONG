<ConsultarItemDoacao>:
    name: "consultar_item_doacao"
    scroll_list_registros: scroll_list_registros
    button_buscar: button_buscar

    MDBoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: "Consultar Item Doação"
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_size:  40

        BoxLayout:
            orientation: 'horizontal'

            MDTextField:
                id: idPesquisa
                hint_text: "Pesquisar item doação"
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                size_hint_x: 0.75
                max_text_length: 25

            MDFillRoundFlatButton:
                id: button_buscar
                text: "Buscar"
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                on_release: root.pesquisar(idPesquisa.text)

            MDFillRoundFlatButton:
                text: "Cancelar"
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                on_release:
                    idPesquisa.text = ''
                    scroll_list_registros.clear_widgets()
                    root.manager.transition.direction = 'right'
                    root.manager.current = "selecionar_doacao_ou_item_doacao"

        MDFillRoundFlatIconButton:
            icon: "account-plus-outline"
            theme_icon_color: "Custom"
            text: "Cadastrar"
            size_hint_x: 0.20
            theme_text_color: "Custom"
            md_bg_color: 0, 0, 0, 1
            line_color: "white"
            font_size: 15
            icon_size: 20
            on_release: root.cadastrar()

        MDScrollView:
            MDList:
                id: scroll_list_registros

<ItemDoacaoListItem>:
    id: list_item_registros
    text: root.texto

    IconLeftWidget:
        icon: 'cog'
        on_release: root.editar()

    MDIconButton:
        icon: "minus"
        pos_hint: {"center_x": .95, "center_y": .5}
        on_release: root.deletar()
