<TelaDoacao>:
    name: 'tela_doacao'

    MDFloatLayout:

        MDLabel:
            id: doacaoLabel
            text: "Cadastrar\nDoacao"
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_size:  40

        MDTextField:
            id: doacaoData
            hint_text:"Data"
            write_tab: False
            multiline: False
            pos_hint: {'center_x':0.5,'center_y':0.7}
            size_hint_x: 0.75
            max_text_length: 25

        MDTextField:
            id: doacaoObservacao
            hint_text:"Observacao"
            write_tab: False
            multiline: False
            pos_hint: {'center_x':0.5,'center_y':0.6}
            size_hint_x: 0.75
            max_text_length: 25

        MDTextField:
            id: doacaoPessoa
            hint_text:"Pessoa"
            write_tab: False
            multiline: False
            pos_hint: {'center_x':0.5,'center_y':0.5}
            size_hint_x: 0.5
            max_text_length: 25

        MDIconButton:
            id: pesquisar_pessoa
            icon: "account-search-outline"
            pos_hint: {"center_x": .2, "center_y": .5}
            icon_size: 30
            on_release: root.dropdown_lista_pessoas()

        MDFillRoundFlatIconButton:
            icon: "arrow-left-circle-outline"
            theme_icon_color: "Custom"
            text: "Voltar"
            pos_hint: {'center_x':0.2,'center_y':0.1}
            size_hint_x: 0.20
            theme_text_color: "Custom"
            md_bg_color: 0, 0, 0, 1
            line_color: "white"
            font_size: 25
            icon_size: 30
            on_release: root.voltar()

        MDFillRoundFlatIconButton:
            id: salvar_button
            icon: "content-save-outline"
            theme_icon_color: "Custom"
            text: "Salvar"
            pos_hint: {'center_x':0.5,'center_y':0.1}
            size_hint_x: 0.20
            theme_text_color: "Custom"
            md_bg_color: 0, 0, 0, 1
            line_color: "white"
            font_size: 25
            icon_size: 30
            on_release: root.salvar_ou_editar_dados()

