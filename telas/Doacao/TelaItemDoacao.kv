<TelaItemDoacao>:
    name: 'tela_item_doacao'

    MDFloatLayout:

        MDLabel:
            id: itemDoacaoLabel
            text: "Cadastrar\nItem Doacao"
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_size:  40

        MDTextField:
            id: quantidadeItem
            hint_text:"Quantidade do item"
            write_tab: False
            multiline: False
            pos_hint: {'center_x':0.5,'center_y':0.6}
            size_hint_x: 0.75
            max_text_length: 25

        MDIconButton:
            id: pesquisarItem
            icon: "archive-search"
            pos_hint: {"center_x": .2, "center_y": .5}
            icon_size: 30
            on_release: root.dropdown_lista_item()

        MDTextField:
            id: nomeItem
            hint_text:"Item"
            write_tab: False
            readonly: True
            multiline: False
            pos_hint: {'center_x':0.5,'center_y':0.5}
            size_hint_x: 0.5
            max_text_length: 25

        MDIconButton:
            id: pesquisarDoacao
            icon: "card-search-outline"
            pos_hint: {"center_x": .2, "center_y": .4}
            icon_size: 30
            on_release: root.dropdown_lista_doacao()

        MDTextField:
            id: obsDoacao
            hint_text:"Doacao"
            write_tab: False
            readonly: True
            multiline: False
            pos_hint: {'center_x':0.5,'center_y':0.4}
            size_hint_x: 0.5
            max_text_length: 25

        MDFillRoundFlatIconButton:
            icon: "arrow-left-circle-outline"
            theme_icon_color: "Custom"
            text: "Voltar"
            pos_hint: {'center_x':0.2,'center_y':0.1}
            size_hint_x: 0.20
            theme_text_color: "Custom"
            md_bg_color: 0, 0, 0, 1
            line_color: "white"
            font_size: 25
            icon_size: 30
            on_release: root.voltar()

        MDFillRoundFlatIconButton:
            id: salvar_button
            icon: "content-save-outline"
            theme_icon_color: "Custom"
            text: "Salvar"
            pos_hint: {'center_x':0.5,'center_y':0.1}
            size_hint_x: 0.20
            theme_text_color: "Custom"
            md_bg_color: 0, 0, 0, 1
            line_color: "white"
            font_size: 25
            icon_size: 30
            on_release: root.salvar_ou_editar_dados()

